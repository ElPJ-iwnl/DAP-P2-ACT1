<section class="container my-4">
  <div class="table-responsive">
    <div class="table-wrapper">
      <div class="table-title mb-3">
        <div class="row">
          <div class="col-sm-5">
            <h2>Photos</h2>
          </div>
          <div class="col-sm-7 text-end">
            <a href="#" class="btn btn-secondary">
              <i class="material-icons">&#xE147;</i> <span>Add New Photo</span>
            </a>
            <a href="#" class="btn btn-secondary">
              <i class="material-icons">&#xE24D;</i> <span>Export to Excel</span>
            </a>
          </div>
        </div>
      </div>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Description</th>
            <th>URL</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (Array.isArray(arrFotos) && arrFotos.length) { %>
            <% arrFotos.forEach((foto, idx) => { %>
              <tr>
                <td><%= idx %></td>
                <td><%= foto.descripcion %></td>
                <td>
                  <img width="20%" height="20%" src="<%= foto.url %>" alt="foto <%= idx %>">
                </td>
                <td>
                  <a href="#" class="settings" title="Settings" data-toggle="tooltip">
                    <i class="material-icons">&#xE8B8;</i>
                  </a>
                  <a href="#" class="delete" title="Delete" data-toggle="tooltip">
                    <i class="material-icons">&#xE5C9;</i>
                  </a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center text-muted">No hay fotos para mostrar.</td>
            </tr>
          <% } %>
        </tbody>
      </table>

      <div class="d-flex justify-content-between align-items-center">
        <div class="hint-text">Showing <b>5</b> out of <b>25</b></div>
        <ul class="pagination mb-0">
          <li class="page-item disabled"><a href="#" class="page-link">Previous</a></li>
          <li class="page-item"><a href="#" class="page-link">1</a></li>
          <li class="page-item"><a href="#" class="page-link">2</a></li>
          <li class="page-item active"><a href="#" class="page-link">3</a></li>
          <li class="page-item"><a href="#" class="page-link">4</a></li>
          <li class="page-item"><a href="#" class="page-link">5</a></li>
          <li class="page-item"><a href="#" class="page-link">Next</a></li>
        </ul>
      </div>
    </div>
  </div>
</section>
